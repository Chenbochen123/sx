    protected void btnAdd_Click(object sender, EventArgs e)
    {
      
        cbxShiftID1.SelectedItem.Value = "1";
        cbxShiftClassID1.SelectedItem.Value = "1";
        txtBarcode1.Text = string.Empty;
        txtEquipName1.Text = string.Empty;
