    //自动生成主键（非自增）
 

    protected string GetMaxPlanID2()
    {
        string planID = "";
        EntityArrayList<Eqm_KongTiao> list = manager.GetAllListOrder(Eqm_KongTiao._.INo.Desc);
        if (list.Count > 0)
        {
            planID = (list[0].INo + 1).ToString();
        }
        else { planID = "1"; }
        return planID;
    }
